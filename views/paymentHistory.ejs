
                  <div class="modal-header">
                    <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">Ã—</span></button>
                    <span class="modal-title"><b>Payment History:</b>
                     
                    </span>
                  </div>

 <div class="modal-body">
 	<div class="row" id="paymentDetails">
<div class="col-md-12">
	
	<table class="table table-condensed" >

		<thead>
			<tr>
				<th>
					Payment For
				</th>
				<th>Paid By</th>
				<th>Payment Amount</th>
				<th>Paid Date</th>
			</tr>
		</thead>

		<tbody>
			<% for (var i=0; i<payHistory.payments.length;i++){
				%>
				<tr>
					<th><%= payHistory.payments[i].paymentMode%></th>
					<td><%= payHistory.payments[i].paidBy%></td>
					<td><%= payHistory.payments[i].paymentAmount%></td>
					<td><%= payHistory.payments[i].paymentDate%></td>
				</tr>
				<%}%>
				
		</tbody>
	</table>
	<input type="hidden" value="<%= payHistory._id%>" id="studentObje"> 
</div>
</div>
</div>

<script type="text/javascript">
	$(function(){
		var studentId=$("#studentObje").val();
		$.ajax({type:"GET",url:"/fees/paymentInfo/"+studentId,
			success:function(resp){
				$("#paymentDetails").append(resp);
				console.log("appendd");
			},error:function(ex){
				alert(ex);
			}
	})
	});
</script>